<LoginScreen>:
    BoxLayout:

        orientation: 'vertical'
        spacing: 20
        padding: 20, 20
        canvas:
            Color:
                rgba: 0.4, 0.6, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            spacing:0
            Image:
                source: 'logo.png'
                height:300

            Label:
                text: 'KOKOS'
                font_size: '60sp'
                font_name: 'Roboto-Bold.ttf'
                size_hint_y: None
                height: 100
                color: 1, 1, 1, 1
        BoxLayout:
            padding:20,20
            orientation: 'vertical'
            size_hint_y: None
            height: 300
            Label:
                text: 'Username'
                color: 0.9, 0.9, 0.9, 1
                font_size: '18sp'
                font_name: 'Roboto-Bold.ttf'
                size_hint_y: None
                size_hint_x: None
                height: 50
            TextInput:
                id: username_input
                hint_text: 'Username'
                size_hint_y: None
                height: 50
                background_color: (0.4, 0.6, 1, 1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)
                border_radius: [20,]
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.9)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,]
                canvas.after:

                    Color:
                        rgba: (1, 1, 1, 0.9)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,]
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 100
            padding:20,20
            Label:
                text: 'Password'
                color: 0.9, 0.9, 0.9, 1
                font_size: '18sp'
                font_name: 'Roboto-Bold.ttf'
                size_hint_y: None
                size_hint_x: None
                height: 50
            TextInput:
                id: password_input
                hint_text: 'Password'
                password: True
                size_hint_y: None
                height: 50
                background_color: (0.4, 0.6, 1, 1)
                background_normal: ''
                background_active: ''
                border: (1, 1, 1, 1)
                border_radius: [20,]
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 0.9)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,]
                canvas.after:

                    Color:
                        rgba: (1, 1, 1, 0.9)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20,]
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.7
            padding:10,10
            Widget:
            Button:
                text: 'Login'
                font_name: 'Roboto-Bold.ttf'
                size_hint_y: None
                height: 150
                font_size: '18sp'
                size_hint_x: None
                width: 500
                background_color: 0.1, 0.3, 0.6, 1
                color: 1, 1, 1, 1
                on_press: root.login(self)
                pos_hint: {'center_x': 0.5}



